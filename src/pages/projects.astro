---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">FOSS Projects</div>
  </div>

  <HorizontalCard
    title="ec-sign-js"
    img="/icon-npm.webp"
    desc="ECDSA cryptographic signature library for JavaScript."
    url="https://github.com/rising3/ec-sign-js"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ec-sign-java"
    img="/post_img.webp"
    desc="ECDSA cryptographic signature library for Java."
    url="https://github.com/rising3/ec-sign-java"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="manjaro-wsl2"
    img="/manjaro-wsl2.webp"
    desc="Manjaro on wsl2 using wsldl."
    url="https://github.com/rising3/manjaro-wsl2"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="semver-gradle-plugin"
    img="/post_img.webp"
    desc="Gradle plugin for Updates the project version.A plugin that can updating the semantic versions like `yarn version` command."
    url="https://github.com/rising3/semver-gradle-plugin"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="SemVer"
    img="/post_img.webp"
    desc="SemVer is a set of Java libraries from the Semantic Versioning."
    url="https://github.com/rising3/semver"
  />
  <div class="divider my-0"></div>
</BaseLayout>
